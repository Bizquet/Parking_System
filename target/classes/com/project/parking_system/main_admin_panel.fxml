<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="mainAdminPane" prefHeight="540.0" prefWidth="960.0" stylesheets="@stylesheet.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.parking_system.controllers.admin.MainAdminController">
   <bottom>
      <AnchorPane id="DarkPanel" prefHeight="115.0" prefWidth="960.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="RedButton" layoutX="109.0" layoutY="35.0" mnemonicParsing="false" onAction="#showAddAccountDialog" text="Add Account" />
            <Button id="RedButton" layoutX="285.0" layoutY="35.0" mnemonicParsing="false" onAction="#showDeleteAccountDialog" text="Delete Account" />
            <Button id="RedButton" layoutX="554.0" layoutY="35.0" mnemonicParsing="false" onAction="#showChangePasswordDialog" text="Change Password" />
            <Button id="BlueButton" layoutX="453.0" layoutY="76.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <TableView fx:id="tellerTable" prefHeight="425.0" prefWidth="960.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn prefWidth="75.0" text="UID">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Role">
                <cellValueFactory>
                    <PropertyValueFactory property="role" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Username">
                <cellValueFactory>
                    <PropertyValueFactory property="username" />
                </cellValueFactory>
            </TableColumn>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <left>
      <Pane id="BGHolder" blendMode="SOFT_LIGHT" prefHeight="425.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane id="BGHolder" blendMode="SOFT_LIGHT" prefHeight="425.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Pane id="BGHolder" blendMode="SOFT_LIGHT" prefHeight="50.0" prefWidth="960.0" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
